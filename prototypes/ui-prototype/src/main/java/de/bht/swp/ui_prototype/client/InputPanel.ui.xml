	<div style="background-image:url(/images/KeySeekerLogo.png); margin:30px; padding:100px; background-size: 20%; background-position: 50% 0%; background-repeat:no-repeat"> </div>
	<div ui:field="loginDiv">
		<table align="center">
     	 <tr>
     	   <td colspan="2" style="font-weight:bold; font-size:18px">Anmeldung:</td>   
     	 </tr>
     	 <tr>
     	 	<td> <g:Label> Anmeldename:</g:Label> </td>
     	 	<td> <g:TextBox> </g:TextBox> </td>
     	 </tr>
     	 <tr>
     	 	<td> <g:Label> Password:</g:Label> </td>
     	 	<td> <g:PasswordTextBox> </g:PasswordTextBox> </td>
     	 </tr>
     	 <tr>
     	 <td></td>
     	 	<td>
     	 		<g:Button ui:field="loginButton"> Anmelden </g:Button>
     	 	</td>
     	 </tr>
     	 <tr>
     	 	<td> <g:Hyperlink> Registrieren</g:Hyperlink> </td>
     	 </tr>
    	</table>
	</div>
	
	<div ui:field="characterCreationDiv" style="display:none">
		<table align="center">
     	 <tr>
     	   <td colspan="2" style="font-weight:bold; font-size:18px">Charaktererstellung:</td>   
     	 </tr>
     	 <tr>
     	 	<td> <g:Label> Charaktername:</g:Label> </td>
     	 	<td> <g:TextBox> </g:TextBox> </td>
     	 </tr>
     	 <tr>
     	 	<td> <g:Label> Klasse:</g:Label> </td>
     	 	<td> <g:ListBox ui:field="classListBox">
