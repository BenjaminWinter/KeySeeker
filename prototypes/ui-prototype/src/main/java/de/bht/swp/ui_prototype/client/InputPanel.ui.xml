     	 			<g:item> Magier </g:item> 
     	 		 </g:ListBox> 
     	 	</td>
     	 </tr>
     	 <tr>
     	 <td></td>
     	 	<td>
     	 	<!-- <g:Button ui:field="confirmButton"> Bestätigen </g:Button>  -->	
     	 	</td>
     	 </tr>
    	
     	 <tr>
     	   <td style="font-weight:bold; font-size:18px">Standartwerte:</td>   
     	 </tr>
     	 <tr>
     	 	<td> <g:Label> Angriff:</g:Label> </td>
     	 	<td> <g:Label ui:field="attackValue"> 3 </g:Label> </td>
     	 </tr>
     	 <tr>
     	 	<td> <g:Label> Runden pro Zug:</g:Label> </td>
     	 	<td> <g:Label ui:field="movesPerTurnValue"> 1 </g:Label> </td>
     	 </tr>
     	 <tr>
     	 	<td> <g:Label> Lebenskraft:</g:Label> </td>
     	 	<td> <g:Label ui:field="lifeValue"> 2 </g:Label> </td>
     	 </tr>
     	 <!--  free space -->
     	 <tr></tr>
     	 <tr></tr>
     	 <tr></tr>
     	 
     	 <tr>
     	 <td></td>
     	 	<td>
     	 		<g:Button ui:field="confirmButton"> Beginnen </g:Button>
     	 	</td>
     	 </tr>
    	</table>
	</div>
    	
